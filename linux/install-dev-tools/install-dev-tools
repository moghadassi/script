#!/bin/bash
# ========================================
# Install Development, Networking & Network Tools on Ubuntu
# ========================================

# 1. Update the system
sudo apt update && sudo apt upgrade -y

# 2. Basic and utility tools
sudo apt install -y build-essential curl wget git unzip software-properties-common apt-transport-https ca-certificates htop tree tmux vim net-tools

# 3. Python and Node.js
sudo apt install -y python3 python3-pip python3-venv
curl -fsSL https://deb.nodesource.com/setup_20.x | sudo -E bash -
sudo apt install -y nodejs

# 4. Java
sudo apt install -y openjdk-20-jdk

# 5. VSCode
wget -qO- https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > microsoft.gpg
sudo install -o root -g root -m 644 microsoft.gpg /usr/share/keyrings/
sudo sh -c 'echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/microsoft.gpg] https://packages.microsoft.com/repos/code stable main" > /etc/apt/sources.list.d/vscode.list'
sudo apt update
sudo apt install -y code

# 6. Docker
sudo apt install -y docker.io docker-compose
sudo systemctl enable --now docker
sudo usermod -aG docker $USER

# 7. C# / .NET SDK
wget https://packages.microsoft.com/config/ubuntu/$(lsb_release -rs)/packages-microsoft-prod.deb -O packages-microsoft-prod.deb
sudo dpkg -i packages-microsoft-prod.deb
rm packages-microsoft-prod.deb
sudo apt update
sudo apt install -y dotnet-sdk-8.0

# 8. Networking & Net Tools
sudo apt install -y nmap netcat traceroute wireshark tcpdump dnsutils whois zenmap

# 9. Cleanup
sudo apt autoremove -y

# 10. Success message
echo
echo "âœ… All tools have been successfully installed!"
echo "Please log out and log back in for Docker group changes to take effect."
echo "VSCode, C# / .NET SDK, and Zenmap are also installed and ready to use."
